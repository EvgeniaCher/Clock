                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF956106" Offset="1"/>
                    <GradientStop Color="#FFFFF484"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>

        <Image x:Name="imgDesign1" Source="Resources/945.png" Margin="0,0,0,8" >
